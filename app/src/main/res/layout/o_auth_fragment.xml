<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loadingPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.OAuthFragment">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:id="@+id/progress_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main_view">

        <TextView
            android:id="@+id/is_signed_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />


        <Button
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

        <Button
            android:id="@+id/start_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

        <Button
            android:id="@+id/start_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_online_game"
            android:layout_margin="15dp"/>

        <Button
            android:id="@+id/start_offline_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_offline_game"
            android:layout_margin="15dp"/>

        <Button
            android:id="@+id/upload_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_games"
            android:layout_margin="15dp"/>


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/learning_mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learning_mode"
            />





    </LinearLayout>
</RelativeLayout>
